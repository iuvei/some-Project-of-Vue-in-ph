/*自定义提示框样式*/
@keyframes mymove
{
  from {bottom:0;}
  to {bottom:50px;}
}
.restel-dialog{
  top auto
  bottom 50px
  transition bottom 1s
  animation mymove 1s;
}

.restel-comfir {
  width auto
}
  /*自定义弹层*/
.def-dialog-container {
  position fixed;
  top: 0;
  z-index: 1000;
  width 100%;
  height 100%;
  background transparent;
}

@keyframes mymove1
{
0% {bottom:0;opacity:0}
50% {bottom:30px;opacity:1}
100% {bottom:50px;opacity:0}
}
.def-dialog{
  position: fixed;
  left: 0;
  right: 0;
  bottom: -100%;
  margin: auto;
  z-index: 2000;
  min-width: 100px;
  width: 92%;
  min-width 20%
  /*height: .68rem;*/
  padding: 0 .2rem;
  margin 0 5%;
  /*line-height: .68rem;*/
  background: transparent;
  color: #fff;
  text-align: center;
  font-size: .3rem;
  border-radius: .08rem;
  /*background #000*/
  transition: bottom 2s;
  animation mymove1 2s;
  span {
    display inline-block
    padding .1rem .2rem
    background #000
    border-radius .08rem
    text-align left
  }
}
/* 弹层公共样式 file*/
.dialog-bg {
  position absolute
  top 0
  z-index 999
  width 100%
  height 100%
  background transparent
}
.dialog-container {
  position absolute
  bottom 0rem
  overflow hidden
  z-index 1000
  width 92%
  padding .3rem
  background #fff
  text-align center
  .dialog-content {
    width 100%
    .dialog-file {
      box-sizing border-box
      position: relative;
      display: block;
      width 100%
      background: #fff;
      border: 1px solid #ff3a3b;
      border-radius: 4px;
      padding: 4px 12px;
      overflow: hidden;
      color: #000;
      text-decoration: none;
      text-indent: 0;
      line-height: .5rem;
      font-size .3rem
      box-shadow 0 2px 1px rgba(0,0,0,.2)
      input {
        position: absolute;
        width 100%
        height 100%
        right: 0 ;
        top: 0;
        opacity: 0;
      }
    }
  }
}

/* 重置时间样式*/
.el-icon-time::before {
  content ''
}
.el-input__icon+.el-input__inner {
  padding-right 0
}
.el-input__inner {
  width auto
  height 100%
  padding 0.08rem
  border 0
  border-radius 0
  text-align center
}

/*mint*/
.mt-dt-picker:after {
  content ''
  display block
  clear both
}
.mt-dt-picker .mint-cell {
  float left
  width 50%
  min-height auto
  padding .15rem 0
}
.mt-dt-picker .mint-cell-wrapper{
  background-size 100% 0
  padding 0
  font-size .28rem
}
.mt-dt-picker .mint-cell:last-child {
  background-size 100% 0
}
.mt-del {
  color #fff
  background #ff3a3b
}
.mint-msgbox-message {
  color #333
}
.mt-ok {
  color #4A90E2
  background #fff
}
