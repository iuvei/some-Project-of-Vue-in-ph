            <ul class="tab-cont-ul">
                <router-link to="" v-show="this.$route.path == '/'">
                  <li class="first_li" style="width:230px;" @mouseenter="first_li_enter" > 选择彩种</li>
                </router-link>
                <router-link to="/">
